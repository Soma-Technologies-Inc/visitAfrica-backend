{
	"extends": ["airbnb-base"],
	"rules": {
		"indent": ["error", "tab"],
		"no-unused-vars": "warn",
		"consistent-return": "off",
		"no-unused-expressions": "off",
		"no-console": "off",
		"require-jsdoc": [
			"error",
			{
				"require": {
					"FunctionDeclaration": true,
					"MethodDefinition": true,
					"ClassDeclaration": true
				}
			}
		],
		"valid-jsdoc": [
			"error",
			{
				"requireReturn": true,
				"requireReturnType": true,
				"requireParamDescription": false,
				"requireReturnDescription": true
			}
		]
	}
}
